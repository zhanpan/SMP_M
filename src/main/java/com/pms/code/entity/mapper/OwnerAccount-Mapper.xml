<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pms.code.entity.base.OwnerAccount">
	<!-- 查询业主输出映射 -->
	<resultMap id="ownerAccountMap" type="com.pms.code.entity.base.OwnerAccount">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="telphone" property="telphone" jdbcType="VARCHAR" />
		<result column="userpwd" property="userpwd" jdbcType="VARCHAR" />
		<result column="balance" property="balance" jdbcType="DOUBLE" />
		<result column="createtime" property="createtime" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 查询业主通过id -->
	<select id="queryOwnerAccountById" parameterType="java.lang.Integer" resultMap="ownerAccountMap">
		SELECT * FROM t_owner_account where id=#{id}
	</select>

	<!-- 添加业主账号 -->
	<insert id="addOwnerAccount" parameterType="OwnerAccount" keyProperty="id" useGeneratedKeys="true">
		insert into t_owner_account (telphone,userpwd,balance,createtime)
			VALUES (#{telphone}, #{userpwd},#{balance},#{createtime})
	</insert>

	<!-- 根据手机号查询业主信息 -->
	<select id="queryOwnerAccountByTelphone" parameterType="hashmap" resultType="OwnerAccount">
		select * from t_owner_account where telphone=#{telphone}
	</select>
	
</mapper> 